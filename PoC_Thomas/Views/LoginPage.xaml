<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="PoC_Thomas.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Margin="20,20">
            <Entry Text="{Binding Username}" Placeholder="Username"></Entry>
            <Entry Text="{Binding Password}" Placeholder="Password"></Entry>
            <Button Text="Login" BackgroundColor="#2196F3" TextColor="White" Command="{Binding CmdLogin}"></Button>
            <Button Text="Create a new account" Command="{Binding CmdAccount}"></Button>
        </StackLayout>
        
    </StackLayout>
</ContentPage>
